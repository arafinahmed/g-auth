# Server Configuration
SERVER_PORT=8080

# PostgreSQL Database Configuration
# Replace with your actual credentials
DB_HOST=postgres_db
DB_PORT=5432
DB_USER=testuser
DB_PASSWORD=testpass
DB_NAME=testdb
DB_SSLMODE=disable           # Use 'require' or 'verify-full' for production with SSL

# Redis Configuration
REDIS_ADDR=redis_cache:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
# IMPORTANT: Use a strong, randomly generated secret in production!
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your_very_strong_and_secret_jwt_key  # <<< CHANGE ME
JWT_ACCESS_TOKEN_EXPIRY_MIN=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7
